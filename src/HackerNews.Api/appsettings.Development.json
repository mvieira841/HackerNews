{
  // Development-specific overrides for Serilog. 
  // Here we drop the Microsoft/System log levels back down to Information so developers 
  // can see detailed routing and framework logs while debugging locally.
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Properties}{NewLine}{Exception}"
        }
      }
    ]
  }
}